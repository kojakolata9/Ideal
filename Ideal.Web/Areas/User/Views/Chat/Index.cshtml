@model TeamViewModel
@{
    ViewData["Title"] = "Index";
}
<form method="post">

    <h3 >
        @Model.TeamName
    </h3>
    <div class="container" style="margin-top: 15px">

        <div class="row">
            <div class="conversation-wrap col-lg-3">
                @foreach (var team in Model.Teams)
                {
                    <div class="media conversation">
                        <a class="pull-left" href="/user/chat?name=@team.Name">
                            <img class="media-object" src="http://icons.iconarchive.com/icons/custom-icon-design/flatastic-8/256/Bulb-icon.png" alt="64x64" style="width: 50px; height: 50px;" src="data:image/png;base64,">
                        </a>
                        <div class="media-body">
                            <h5 class="media-heading">@team.Name</h5>

                        </div>
                    </div>
                }
            </div>

            <div class="message-wrap col-lg-8">
                <div class="msg-wrap" id="postLists">
                    @foreach (var message in Model.Messages)
                    {
                        <div class="media msg ">
                            <a class="pull-left" href="#">
                                <img class="media-object" src="http://files.softicons.com/download/web-icons/free-icon-set-by-eclipse-saitex/png/96/User.png" alt="64x64" style="width: 32px; height: 32px;">
                            </a>
                            <div class="media-body">
                                <small class="pull-right time"><i class="fa fa-clock-o"></i>@message.Timestamp.ToString("hh:mm tt")</small>
                                <h5 class="media-heading">@message.Author</h5>
                                <small class="col-lg-10" style="color: white">
                                   @message.Content
                                </small>
                            </div>
                        </div>
                    }
                </div>
                    <div class="send-wrap ">
                        <textarea name="content" class="form-control send-message" id="content"  rows="3" placeholder="Write a reply..."></textarea>
                        <input type="hidden" name="teamName" id="teamName" value="@Model.TeamName">
                    </div>
                    <div class="btn-panel">
                        
                        <button type="submit" class=" col-lg-4 text-right btn  send-message-btn pull-right" role="button"><i class="fa fa-plus"></i> Send Message</button>
                    </div>
                
            </div>

        </div>
    </div>
</form>
